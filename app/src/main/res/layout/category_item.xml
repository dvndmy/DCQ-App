<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginStart="9.0dip"
    android:layout_marginTop="5.0dip"
    android:layout_marginEnd="9.0dip"
    android:layout_marginBottom="12.0dip"
    android:gravity="center|top"
    android:orientation="vertical"
    app:cardCornerRadius="3.0dip"
    app:cardElevation="4.0dip">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center|top"
        android:src="@drawable/ic_menu_share"
        app:civ_border_color="#34757575"
        app:civ_border_width="8.0dip">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/text_view_cat_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="6.0dip"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/black" />

</LinearLayout>

